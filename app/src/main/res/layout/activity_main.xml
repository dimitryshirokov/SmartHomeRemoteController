<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:actionBarNavMode="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/kitchen"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="305dp"
        android:layout_height="90dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:onClick="kitchenClick"
        android:text="@string/KITCHEN"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/hallway"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room" />

    <Button
        android:id="@+id/hallway"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="305dp"
        android:layout_height="90dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:onClick="hallwayClick"
        android:text="@string/HALLWAY"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/bathroom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kitchen" />

    <Button
        android:id="@+id/room"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="305dp"
        android:layout_height="90dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="60dp"
        android:onClick="roomClick"
        android:text="@string/ROOM"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/kitchen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bathroom"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="305dp"
        android:layout_height="90dp"
        android:layout_marginBottom="210dp"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:onClick="bathroomClick"
        android:text="@string/BATHROOM"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hallway" />

</android.support.constraint.ConstraintLayout>